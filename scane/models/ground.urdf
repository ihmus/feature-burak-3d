<?xml version="1.0" ?>
<robot name="drone">

  <!-- Drone'un ana gövdesi -->
  <link name="base_link">
    <inertial>
      <mass value="1.0"/> <!-- Kütle -->
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/> <!-- İnersi tensoru -->
    </inertial>
    <collision>
      <geometry>
        <box size="0.4 0.4 0.2"/> <!-- Gövde boyutu -->
      </geometry>
    </collision>
    <visual>
      <geometry>
        <box size="0.4 0.4 0.2"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/> <!-- Renk -->
      </material>
    </visual>
  </link>

  <!-- 1. Motor -->
  <link name="motor1">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.1"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
  </link>
  
  <!-- 2. Motor -->
  <link name="motor2">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.1"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
  </link>

  <!-- 3. Motor -->
  <link name="motor3">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.1"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
  </link>

  <!-- 4. Motor -->
  <link name="motor4">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.1"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
  </link>

  <!-- Motorların bağlantıları (her bir motorun ana gövdeye sabitlenmesi) -->
  <joint name="motor1_joint" type="fixed">
    <parent link="base_link"/>
    <child link="motor1"/>
    <origin xyz="0.2 0.2 0.1"/> <!-- Motor 1'in pozisyonu -->
  </joint>

  <joint name="motor2_joint" type="fixed">
    <parent link="base_link"/>
    <child link="motor2"/>
    <origin xyz="-0.2 0.2 0.1"/> <!-- Motor 2'nin pozisyonu -->
  </joint>

  <joint name="motor3_joint" type="fixed">
    <parent link="base_link"/>
    <child link="motor3"/>
    <origin xyz="-0.2 -0.2 0.1"/> <!-- Motor 3'ün pozisyonu -->
  </joint>

  <joint name="motor4_joint" type="fixed">
    <parent link="base_link"/>
    <child link="motor4"/>
    <origin xyz="0.2 -0.2 0.1"/> <!-- Motor 4'ün pozisyonu -->
  </joint>

  <!-- Pervanelerin görsel temsilini ekleyebiliriz -->
  <link name="propeller1">
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.01"/>
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
  </link>
  
  <link name="propeller2">
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.01"/>
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
  </link>

  <link name="propeller3">
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.01"/>
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
  </link>

  <link name="propeller4">
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.01"/>
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
  </link>

  <!-- Pervanelerin bağlantıları (her bir pervaneyi ilgili motora bağla) -->
  <joint name="propeller1_joint" type="fixed">
    <parent link="motor1"/>
    <child link="propeller1"/>
    <origin xyz="0 0 0.05"/>
  </joint>

  <joint name="propeller2_joint" type="fixed">
    <parent link="motor2"/>
    <child link="propeller2"/>
    <origin xyz="0 0 0.05"/>
  </joint>

  <joint name="propeller3_joint" type="fixed">
    <parent link="motor3"/>
    <child link="propeller3"/>
    <origin xyz="0 0 0.05"/>
  </joint>

  <joint name="propeller4_joint" type="fixed">
    <parent link="motor4"/>
    <child link="propeller4"/>
    <origin xyz="0 0 0.05"/>
  </joint>

</robot>